extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-3.m-b-2 Sign Up

        // register form
        form(method='POST' action='/register')
          div.form-group
            label(for='username') Username:
            input#name.form-control(type='text', placeholder='username' name='username')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='full name' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='favoriteCharacter') Favorite Tolkien Character:
            input#favoriteBook.form-control(type='text', placeholder='Glorfindel?' name='favoriteCharacter')
          div.form-group
            label(for='pw') Password:
            p
              em Minimum 8 characters at least 1 Uppercase Alphabet, 1 Lowercase Alphabet, 1 Number and 1 Special Character. 
            input#pw.form-control(type='password' name='password' pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[$@$!%*?&])[A-Za-z\\d$@$!%*?&]{8,}")
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Sign up
          
